<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
     >
    
     <EditText
	        android:id="@+id/indididual_changepwd_orgin"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_gravity="center"
	        android:inputType="text"
        	android:gravity="center"
	        android:textColor="@color/white"
	        android:background="@drawable/selector_individual_edittext_invitationcode"
	        android:hint="请输入原始密码"
	        android:textSize="20sp" />

     
     <EditText
	        android:id="@+id/indididual_changepwd_now"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_gravity="center"
	        android:hint="请输入新密码"
	        android:inputType="text"
        	android:gravity="center"
	        android:textColor="@color/white"
	        android:background="@drawable/selector_individual_edittext_invitationcode"
	        android:textSize="20sp"
	        android:layout_marginTop="15dp"
	        android:layout_marginBottom="15dp" />
     
     <EditText
	        android:id="@+id/indididual_changepwd_now2"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_gravity="center"
	        android:hint="请再次输入新密码"
	        android:inputType="text"
        	android:gravity="center"
	        android:textColor="@color/white"
	        android:background="@drawable/selector_individual_edittext_invitationcode"
	        android:textSize="20sp"
	        android:layout_marginBottom="15dp"  />
     
     <Button
	        android:id="@+id/individual_changepwd_submit" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/sure"
	        android:textColor="@color/white"
	        android:layout_marginLeft="8dp"
	        android:textSize="18sp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:paddingLeft="32dp"
	        android:paddingRight="32dp"
	        android:background="@drawable/selector_individual_button_receive"
	        />
</LinearLayout>
